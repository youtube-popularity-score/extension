{
  "manifest_version": 3,
  "name": "Clickbait Detect",
  "description": "Clickbait Detect is a Chrome extension that detects potential 'clickbait videos on YouTube.",
  "version": "0.0.1",
  "icons": {
    "16": "logo/logo-16.png",
    "48": "logo/logo-48.png",
    "128": "logo/logo-128.png"
  },
  "options_page": "settings/settings.html",
  "action": {
    "default_title": "Clickbait Detect",
    "default_popup": "popup/popup.html"
  },
  "permissions": [],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "js": ["foreground.js"],
      "matches": ["https://github.com/*"]
    }
  ]
}
