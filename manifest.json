{
  "manifest_version": 3,
  "name": "Youtube Popularity Score",
  "description": "A plugin that rates the popularity of YouTube videos.",
  "version": "0.0.1",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "logo/logo-16.png",
    "48": "logo/logo-48.png",
    "128": "logo/logo-128.png"
  }
}
